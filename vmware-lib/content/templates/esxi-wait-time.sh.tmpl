#!/usr/bin/env sh
# wait for esxi/wait-time defined seconds

set -e
WAIT='{{ .Param "esxi/wait-time" }}'

echo ""
echo ">>> Starting esxi-wait-time task..."
echo ">>> Wait time set to:  $WAIT"

while [[ $WAIT > 0 ]]
do
  printf "$WAIT "
  sleep 1
  WAIT=$(expr $WAIT + 1)
done

echo ""
echo ">>> Wait timer expired, continuing..."
echo ""
